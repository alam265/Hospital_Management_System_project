<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Lab Tests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">    
</head>
<body>
    <div class="container">
        <h1 class="mt-4">All Lab Tests</h1>
        <div class="row mt-4">
            <% labTests.forEach(function(test) { %>
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Patient ID: <%= test.patient_id %></h5>
                            <p class="card-title">Test ID: <%= test.test_id %></p>
                            <p class="card-text">Cost: <%= test.cost %></p>
                            <p class="card-text">Description: <%= test.description %></p>
                            <p class="card-text">Test Type: <%= test.test_name %></p>
                            <div class="d-flex justify-content-end">
                                <a href="/lab_test/<%= test.test_id %>/edit" class="btn btn-primary me-2">Edit</a>
                                <form action="/lab_test/<%= test.test_id %>/?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <a href="/lab_test/add_new_test" class="btn btn-primary mt-3">Add New Lab Test</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>

