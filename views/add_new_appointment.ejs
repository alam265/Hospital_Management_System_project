<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Appointment</title>
  <!-- Link Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Link your custom CSS -->
  <link rel="stylesheet" href="add_new_appointment.css">
</head>
<body>

  <div class="container">
    <h1 class="mt-4">Add New Appointment</h1>

    <form method="POST" action="/appointment/add_new_appointment" class="mt-4">
      <div class="mb-3">
        <label for="patient_id" class="form-label">Patient Name:</label>
        <select name="patient_id" class="form-select" required>
          <% patients.forEach(patient => { %>
            <option value="<%= patient.patient_id %>"><%= patient.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="doctor_id" class="form-label">Doctor Name:</label>
        <select name="doctor_id" id="doctorId" class="form-select" required>
          <% doctors.forEach(doctor => { %>
            <option value="<%= doctor.doctor_id %>" data-charge="<%= doctor.charge %>"><%= doctor.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date:</label>
        <input type="date" name="date" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="time" class="form-label">Time:</label>
        <input type="text" name="time" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="visiting_fee" class="form-label">Visiting Fee:</label>
        <input type="number" name="visiting_fee" id="visitingFee" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Add Appointment</button>
    </form>
  </div>

  <!-- Link Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


