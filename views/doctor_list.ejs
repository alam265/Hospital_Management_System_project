<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">    
    <title>All Doctor List</title>
</head>
<body>
    <header class="bg-info text-white py-4">
        <div class="container">
            <h1 class="text-center">ALL DOCTOR LIST</h1>
        </div>
    </header>

    <div class="container mt-4">
        <div class="row ">
            <% for(doctor of doctors) { %>
            <div class="col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><%= doctor.name %></h5>
                        <p class="card-text">ID: <%= doctor.doctor_id %></p>
                        <p class="card-text">Phone No: <%= doctor.phone_num %></p>
                        <p class="card-text">Email: <%= doctor.email %></p>
                        <p class="card-text">Specialization: <%= doctor.specialization %></p>
                        <p class="card-text">Qualification: <%= doctor.qualification %></p>
                        <p class="card-text">Charge: <%= doctor.charge %></p>
                        <div class="d-flex   mt-3">
                            <form class="me-2" action="/doctor/<%= doctor.doctor_id %>/edit">
                                <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                            </form>
                            <form method="post" action="/doctor/<%= doctor.doctor_id %>?_method=DELETE">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <a class="btn btn-info" href="/doctor/add_new_doctor">Add New Doctor</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>    
</body>
</html>
