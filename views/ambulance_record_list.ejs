<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Ambulance Records</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">All Ambulance Records</h1>
        <div class="row">
            <% ambulanceRecords.forEach(function(record) { %>
            <div class="col-md-9">
                <div class="card my-3">
                    <div class="card-body">
                        
                        <p class="card-text">Patient ID: <%= record.patient_id %></p>
                        <p class="card-text">Destination: <%= record.destination %></p>
                        <p class="card-text">Cost: <%= record.cost %></p>
                        <form action="/ambulance/<%= record.patient_id %>/?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <a href="/ambulance/add_new_record" class="btn btn-primary">Add New Ambulance Record</a>

    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
